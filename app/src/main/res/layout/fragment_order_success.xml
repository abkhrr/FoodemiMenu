<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.foodemi.foodemimenu.ui.viewmodel.feature.fragment.state.success.OrderSuccessViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="#272329"
        android:fillViewport="true"
        android:layout_height="match_parent"
        tools:context=".ui.view.feature.fragment.state.success.FragmentOrderSuccess">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/FOODEMI_DEFAULT_BACKGROUND"
            android:layout_marginBottom="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/logoFoodemiOrderSuccess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_logo_foodemi"
                android:padding="20dp"
                android:scaleType="fitCenter"/>

        <RelativeLayout
            android:layout_below="@+id/logoFoodemiOrderSuccess"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#272329"
            android:padding="20dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/success_image_success"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/ic_order_success"
                android:padding="20dp"
                android:scaleType="fitCenter"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textTitleSuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@+id/success_image_success"
                android:layout_centerHorizontal="true"
                android:text="Hallo, Pesanan Anda Akan Segera Dibuat. Sabar ya, akan segera kami antar :)"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-black"
                android:maxEms="20"
                android:layout_marginTop="15dp"
                android:textSize="16dp"
                tools:ignore="HardcodedText,SpUsage" />

        </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/view_btn_action_to_feedback"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/FOODEMI_PADDING_DEXTAR"
                android:layout_marginEnd="@dimen/FOODEMI_PADDING_DEXTAR"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/FOODEMI_DEFAULT_BACKGROUND"
                android:elevation="@dimen/FOODEMI_ELEVATION_BUTTON"
                android:fontFamily="@font/foodemi_bold"
                android:text="OKE"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:textAlignment="center"
                android:layout_alignParentBottom="true"
                android:textAllCaps="false"
                android:textColor="@color/FOODEMI_COLOR_TEXT_MAIN_INVERT"
                tools:ignore="UnusedAttribute" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</layout>