<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.foodemi.foodemimenu.ui.viewmodel.feature.fragment.thankyou.ThankyouViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="#272329"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".ui.view.feature.fragment.thankyou.FragmentThankyou">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/FOODEMI_DEFAULT_BACKGROUND"
            android:layout_marginBottom="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/logoFoodemiOrderSuccess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_logo_foodemi"
                android:padding="20dp"
                android:scaleType="fitCenter"/>

            <RelativeLayout
                android:layout_below="@+id/logoFoodemiOrderSuccess"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#272329"
                android:padding="30dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textTitleSuccess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:text="Terimakasih telah memilih kami menjadi destinasi kuliner anda hari ini."
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-black"
                    android:maxEms="20"
                    android:layout_marginTop="12dp"
                    android:textSize="16dp"
                    tools:ignore="HardcodedText,SpUsage" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/FOODEMI_DEFAULT_BACKGROUND"
                    android:layout_below="@+id/textTitleSuccess"
                    android:layout_marginTop="20dp"
                    android:id="@+id/lineDivider"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textTitleSuccess2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_below="@+id/lineDivider"
                    android:layout_centerHorizontal="true"
                    android:text="Kami Sangat Mengharapkan dan menunggu Kedatangan Anda Kembali."
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-black"
                    android:maxEms="20"
                    android:layout_marginTop="20dp"
                    android:textSize="16dp"
                    tools:ignore="HardcodedText,SpUsage" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/success_image_success"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/ic_logo_thanks"
                    android:layout_below="@+id/textTitleSuccess2"
                    android:padding="20dp"
                    android:layout_marginTop="40dp"
                    android:scaleType="fitCenter"/>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</layout>