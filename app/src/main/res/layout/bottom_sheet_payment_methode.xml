<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/view_base_payment_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioBtnSelectedPaymentMethod"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/view_type_icon_payment_methode"
            android:layout_width="26dp"
            android:layout_height="26dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/view_type_text_payment_methode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxEms="50"
            android:layout_toEndOf="@+id/view_type_icon_payment_methode"
            android:textColor="@color/FOODEMI_COLOR_TEXT_MAIN"
            android:textSize="14dp"
            tools:text="Pembayaran Dengan Cash"
            android:fontFamily="@font/roboto_condensed_regular"
            android:gravity="center"
            tools:ignore="HardcodedText,RelativeOverlap,SpUsage"/>

    </RelativeLayout>

    <View
        android:id="@+id/view_divider_payment_method"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FAFAFA"
        android:layout_below="@+id/view_base_payment_method"/>

</RelativeLayout>